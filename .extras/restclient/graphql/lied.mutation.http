### Neues Buch anlegen
POST {{graphQlUrl}}
Content-Type: application/json
Authorization: Bearer {{login.response.body.$.data.login.token}}
X-REQUEST-TYPE: GraphQL

mutation {
  create(
    input: {
      titel: "Neuer Titel"
      rating: 1,
      art: MP3,
      datum: "2022-01-31",
      schlagwoerter: ["JAVASCRIPT", "TYPESCRIPT"],
      abbildungen: [{
        name: "Neuer Kuenstler"
      }]
    }
  )
}

