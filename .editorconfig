# http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
trim_trailing_whitespace = true

[*.{ts,mts,js,mjs,cjs,puml}]
indent_size = 4

[Dockerfile]
indent_size = 4

[*.md]
max_line_length = 0

# Ignore paths
[*.sql]
charset = unset
end_of_line = unset
indent_style = unset
indent_size = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
